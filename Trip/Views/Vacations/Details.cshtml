@model Trip.Models.VacationDisp

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Vacation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dd>
            @foreach (var item in Model.Sequences)
            {
                if (item.Selected)
                {
                    Trip.Models.Sequence sequence = (Trip.Models.Sequence) item.Obj;
                    <div>@sequence.Name (Duration: @sequence.GetDuration() minutes)</div>
                }
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.VacationID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
