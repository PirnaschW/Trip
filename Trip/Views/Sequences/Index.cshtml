@model IEnumerable<Trip.Models.SequenceDisp>

@{
    ViewBag.Title = "Index";
}

<h2>List of Sequences</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
  <tr>
    <th>@Html.DisplayNameFor(model => model.Name)</th>
    <th>@Html.DisplayNameFor(model => model.Region.Name)</th>
    <th># of Activities</th>
    <th></th>
  </tr>

@foreach (var item in Model)
{
  <tr>
    <td>@Html.DisplayFor(modelItem => item.Name)</td>
    <td>@Html.DisplayFor(modelItem => item.Region.Name)</td>
    <td>@item.SelectedActivities.Count()</td>
    <td>
      @Html.ActionLink("Edit", "Edit", new { id = item.SequenceID }) |
      @Html.ActionLink("Details", "Details", new { id = item.SequenceID }) |
      @Html.ActionLink("Delete", "Delete", new { id = item.SequenceID })
    </td>
  </tr>
}

</table>
