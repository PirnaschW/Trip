@model IEnumerable<Trip.Models.Sequence>

@{
    ViewBag.Title = "Index";
}

<h2>List of Sequences</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name) (Duration: @item.GetDuration() minutes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SequenceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SequenceID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SequenceID })
        </td>
    </tr>
}

</table>
